@using HelpDesk.BLL.Account
@inject MembershipTools MembershipTool
@{
    ViewData["Title"] = "Operator Anasayfa";
}

<div>
    <h3 style="color:green">@(TempData["Message"] as string)</h3>
    <h3 style="color:red">@(TempData["Message2"] as string)</h3>
    <hr />
    <!-- Page Inner -->
    <div class="page-inner">
        <div id="main-wrapper">
            <div class="row">
                <div class="col-md-12">
                    <div class="panel panel-white">
                        <div class="panel-body">
                            <div class="table-responsive">
                                <table id="example2" class="display table" style="width: 100%; mso-cellspacing: 0;">
                                    <thead>
                                        <tr>
                                            <th>#</th>
                                            <th>Id</th>
                                            <th>Durum</th>
                                            <th>Teknisyen</th>
                                            <th>Enlem</th>
                                            <th>Boylam</th>
                                            <th>Aksiyon</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @for (int i = 0; i < Model.Count; i++)
                                        {
                                            var current = Model[i];
                                            <tr style="background: lightgrey">
                                                <th>@(i + 1)</th>
                                                <td>@current.IssueId</td>
                                                <td>@current.IssueState</td>
                                                <td style="text-align:justify">@(current.TechnicianId == null ? "Teknisyen Atanmadı" : await MembershipTool.GetNameSurname(current.TechnicianId))</td>
                                                <td>@current.Latitude</td>
                                                <td>@current.Longitude</td>
                                                <td>
                                                    <a asp-action="Details" asp-controller="Operator" asp-route-id="@current.IssueId" class="btn btn-instagram">Üzerine Al</a>
                                                </td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div><!-- Row -->
        </div><!-- Main Wrapper -->

    </div><!-- /Page Inner -->
    <div class="col-md-4">
        <a asp-action="Index" asp-controller="Account" class="btn btn-block btn-instagram">Profil Sayfası</a>
    </div>
</div>


