@model HelpDesk.Models.ViewModels.ChangePasswordVM
@{
    ViewData["Title"] = "Şifre Değiştirme";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<form asp-controller="Account" asp-action="ChangePassword" method="post">
    <div class="form-horizontal">
        <hr />
        <div asp-validation-summary="All" class="text-danger"></div>
        <div class="form-group">
            <label asp-for="OldPassword" class="control-label col-md-2"></label>
            <div class="col-md-3">
                <input type="password" asp-for="OldPassword" class="form-control" />
                <span asp-validation-for="OldPassword" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group">
            <label asp-for="NewPassword" class="control-label col-md-2"></label>
            <div class="col-md-3">
                <input type="password" asp-for="NewPassword" class="form-control" />
                <span asp-validation-for="NewPassword" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group">
            <label asp-for="ConfirmNewPassword" class="control-label col-md-2"></label>
            <div class="col-md-3">
                <input type="password" asp-for="ConfirmNewPassword" class="form-control" />
                <span asp-validation-for="ConfirmNewPassword" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-3">
                <input type="submit" value="Kaydet" class="btn btn-block btn-instagram" />
                <a asp-action="Index" asp-controller="Account" class="btn btn-block btn-google">Profil</a>
            </div>
        </div>
    </div>
</form>
